<!-- Include Chart.js from a CDN -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>

<!-- Inline Chart.js code for rendering the chart -->
<script>
    import {Chart} from "chart.js";

    document.addEventListener("DOMContentLoaded", function() {
        console.log("Pie Chart log");
        console.log({{ chartLabels|json_encode|raw }}, {{ chartValues|json_encode|raw }});

        let ctx = document.getElementById('myPieChart').getContext('2d');
        let myPieChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: {{ chartLabels|json_encode|raw }},
                datasets: [{
                    label: 'Number of Tickets by Status',
                    data: {{ chartValues|json_encode|raw }},
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false
            }
        });
    });
</script>